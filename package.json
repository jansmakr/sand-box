{
  "name": "webapp",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:css && vite build",
    "build:css": "tailwindcss -i ./src/styles.css -o ./public/static/tailwind.css --minify",
    "preview": "wrangler pages dev",
    "deploy": "npm run build && wrangler pages deploy dist --project-name=carejoa-webapp",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings"
  },
  "dependencies": {
    "hono": "^4.9.9"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
